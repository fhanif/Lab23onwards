<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.gc.models.ItemsEntity" table="items" schema="coffeeshop">
        <id name="itemName">
            <column name="itemName" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="description">
            <column name="description" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="price">
            <column name="price" sql-type="varchar(45)" length="45"/>
        </property>
    </class>
</hibernate-mapping>